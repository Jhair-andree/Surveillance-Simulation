<?xml version="1.0" ?>
<sdf version="1.5">
  <model name="sphere">
    <pose>0 0 1.0 0 0 0</pose>

    <link name="base">
        
        <visual name="base">
            <geometry>
                <box>
                  <size>2.0 2.0 1.0</size>
                </box>
            </geometry>
        </visual>

        <collision name="base">
            <geometry>
                <box>
                  <size>2.0 2.0 1.0</size>
                </box>
            </geometry>
        </collision>

    </link>

    <joint name="world_base" type="fixed">
        <parent>world</parent>
        <child>base</child>
    </joint>

    <link name="mast">

        <visual name="mast">
            <geometry>
                <cylinder>
                    <radius>0.2</radius>
                    <length>5.0</length>
                </cylinder>
            </geometry>
            <!-- <pose>0 0 0 0 0 0</pose> -->
        </visual>
    
        <collision name="mast">
            <geometry>
                <cylinder>
                    <radius>0.2</radius>
                    <length>5.0</length>
                </cylinder>
            </geometry>
        </collision>

    </link>

    <joint name="base_to_mast" type="prismatic">

        <parent>base</parent>
        <child>mast</child>

        <axis>
            <xyz>
                0.0 0.0 1.0
            </xyz>
        </axis>
    </joint>

    <link name="slipring">
        <visual name="slipring">
            <geometry>
                <cylinder>
                    <radius>0.2</radius>
                    <length>0.2</length>
                </cylinder>
            </geometry>
            <pose>0 0 5.0 0 0 0</pose>
        </visual>
        
        <collision name="slipring">
            <geometry>
                <cylinder>
                    <radius>0.2</radius>
                    <length>0.2</length>
                </cylinder>
            </geometry>
            <!-- <pose>0 0 2.6 0 0 0</pose> -->
        </collision>
    </link>

    <joint name="mast_slipring" type="continuous">
        <parent>mast</parent>
        <child>slipring</child>
        <axis>
            <xyz>
                0.0 0.0 1.0
            </xyz>
        </axis>
    </joint>

    <link name="tbase">
        <visual name="tbase">
            <geometry>
                <box>
                  <size>0.1 0.1 1.0</size>
                </box>
            </geometry>
            <pose>0 0 5.4 0 0 0</pose>
        </visual>
        <collision name="tbase">
            <geometry>
                <box>
                  <size>0.1 0.1 1.0</size>
                </box>                
            </geometry>
        </collision>
    </link>

    <joint name="slipring_tbase" type="fixed">
        <parent>slipring</parent>
        <child>tbase</child>
        <axis>
            <xyz>
                0.0 0.0 1.0
            </xyz>
        </axis>
    </joint>

